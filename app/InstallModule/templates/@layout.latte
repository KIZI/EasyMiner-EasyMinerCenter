{**
 * @param string   $basePath web base path
 * @param array    $flashes  flash messages
 *}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{block title}Installer{/block} :: EasyMiner</title>

  <link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/index.css">
  <link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/install.css">

  <link rel="icon" type="image/png" href="{$basePath}/images/favicon-32x32.png" sizes="32x32" />
  <link rel="icon" type="image/png" href="{$basePath}/images/favicon-16x16.png" sizes="16x16" />
  <link rel="icon" type="image/x-icon" href="{$basePath}/images/favicon.ico" sizes="16x16" />

  {block scripts}
    <script src="{$basePath}/js/jquery.js"></script>
    <script src="{$basePath}/js/liveFormsValidation.js"></script>
    <script src="{$basePath}/js/main.js"></script>
  {/block}
  {block head}{/block}
</head>
<body>
  <header>
    <div class="content">
      <h1 id="applicationMainTitle" onclick="location.href={plink Default:};">
        EasyMiner<sup>{@$version}</sup>
        <span>easy association rule mining</span>
      </h1>
    </div>
  </header>

  {block main}
    <main>
      <div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>
      {ifset installer}
        <div id="installer">
          {include 'Wizard/progress.inc.latte'}
          {include installer}
        </div>
      {/ifset}
      {ifset content}
        {include content}
      {/ifset}
    </main>
  {/block}

  <footer>
    <div class="content">
      <div class="copyright">Copyright &copy; <a href="http://kizi.vse.cz">KIZI, VÅ E Praha</a></div>
    </div>
  </footer>
</body>
</html>
