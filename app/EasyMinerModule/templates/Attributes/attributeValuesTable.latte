{block title}{$attribute->name} - {_'Values'}{/block}
{block content}

  <div id="valuesTablePage">

    <h1>{$attribute->name}</h1>
    <p>{_'Unique values count:'} <strong>{$attribute->uniqueValuesCount}</strong></p>

    {if $attribute->uniqueValuesCount>0}
      <table class="valuesListTable">
        <thead>
          <tr>
            <th>{_'Value'}</th>
            <th>{_'Frequency'}</th>
          </tr>
        </thead>
        <tbody>

        {foreach $ppValues as $ppValue}
          <tr>
            <td>{$ppValue->value}</td>
            <td class="frequency">{$ppValue->frequency}</td>
          </tr>
        {/foreach}

        </tbody>
      </table>

      {*TODO paginator*}

    {/if}

  </div>

{/block}


