div.overlay{
  position: fixed;
  z-index:100;
  top: 0;
  left: 0;
  height:100%;
  width:100%;
  background-color:#000;
  background-color:rgba(0,0,0,0.5);
}
div.modal, section.modal {
  background: #ffffff;
  z-index: 102;
  color:#000000;
  border: none;
  padding: 30px;
  text-align:left;
  margin: 0 auto;
  -webkit-box-shadow: 0 0 10px 0 rgba(0,0,0,0.4);
  box-shadow: 0 0 10px 0 rgba(0,0,0,0.4);
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
