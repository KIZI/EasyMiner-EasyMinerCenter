#errorPage
  display block
  margin 0 auto
  width 70%
  position relative
  padding-top 70px

  h1, p
    position relative
    color white
    text-shadow 2px 2px 10px errorColor
    width 80%

  .errorCode
    position absolute
    right 0
    top 80px
    padding 0
    margin 0
    font-size 300px
    line-height 300px
    color #1D71A6
    z-index -1
    opacity 0.4