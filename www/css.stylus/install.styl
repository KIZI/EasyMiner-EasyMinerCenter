/**
 *  Specifické styly pro instalátor (nepoužívají se v žádné jiné části aplikace)
 */

//import basic shared styles
@import '../../submodules/EasyMiner-MiningUI/web/css.stylus/_mixins.styl'
@import '_mixinsEMC.styl'

#installer
  mainBlock()
  width 800px
  position relative

  #progress
    position absolute
    top 26px
    right 20px
    width 150px
    font-size 70%
    color grey
    text-align center
    div#progressGraph
      border 1px solid grey
      height 10px
      width 100%
      padding 0
      margin 4px 0
      > div
        background mainButtonBackground
        height 10px
        padding 0
        margin 0

  .actions
    text-align center
    a
      mainButton()
      display inline-block

  .statesTable
    listTable()
    width 100%
    td.stateOk
      color black
      background #acdd4a
    td.stateErr
      color white
      background maroon
    td.stateWarn
      color black
      background #ffe86d
    div.description
      font-size 0.8em
      color grey

  form
    input[type="text"]
    input[type="password"]
    input[type="email"]
      width 400px

    .withSpace
      margin-bottom 20px
      & + span
        margin-top -20px
        margin-bottom 20px