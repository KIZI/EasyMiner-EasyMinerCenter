div#homePage
  +tablet_l()
    flexbox(flex)
    flex-direction(column)
    flex-justify(start)
    flex-align(center)
    height 100%
  #slogan
    opacity 0.8
    margin blockMargin
    min-height 80px
    +tablet_l()
      flexbox(flex)
      flex-direction(row)
      width 100%
      min-height 133px
    > div
      padding 2*blockMargin blockMargin
      display none
      &.visible
        display block
        +tablet_l()
          flexbox(flex)
          flex-direction(row)
          flex-justify(start)
      +tablet_l()
        .slogan-content
          flexbox(flex)
          flex-direction(column)
          flex-justify(center)
          width 100%
          h2
            width 100%
            margin 0
            padding 5px 0
            color white

          p
            margin 0
            padding 0
            color white


      h2
        margin 0
        padding 5px 0
        color white

      p
        margin 0
        padding 0
        color white

      > img
        float left
        width 80px
        height 80px
        margin-right 30px

  #actions
    overflow auto
    flexbox(flex)
    flex-direction(row)
    flex-justify(center)
    flex-wrap(wrap)
    flex-content(center)
    flex-align(stretch)

    section
      block()
      flex(25%)
      +tablet_l()
        li
          padding 10px

      h2
        padding 10px 10px 5px 60px
      &.start
        flex(grow:1)
        +tablet_l()
          margin-left 10px
        h2
          background url(../images/icons/plane-48.png) left center no-repeat
        .actions
          text-align center
          a
            font-size baseFontSize
            padding 15px 30px
      &.more
        h2
          background url(../images/icons/questinaire-48.png) left center no-repeat
      &.about
        h2
          background url(../images/icons/flag-48.png) left center no-repeat
        +tablet_l()
          a
            padding 10px